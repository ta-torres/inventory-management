<div class="section">
  <h2><%= category.name %></h2>
  <p><%= category.description || 'No description available' %></p>

  <div style="margin: 20px 0">
    <a href="/categories" class="btn btn-secondary">‚Üê Back to Categories</a>
    <a href="/items/new" class="btn">Add New Item</a>
    <a href="/categories/<%= category.id %>/edit" class="btn">Edit Category</a>
    <form
      action="/categories/<%= category.id %>/delete"
      method="POST"
      style="display: inline"
      onsubmit="return confirm('Are you sure you want to delete this category? This will also delete all items in this category. This action cannot be undone');"
    >
      <button type="submit" class="btn btn-danger">Delete Category</button>
    </form>
  </div>

  <h3>Items in this Category</h3>

  <% if (items.length > 0) { %> <% items.forEach(item => { %>
  <div class="card">
    <h4><%= item.name %></h4>
    <p><%= item.description || 'No description available' %></p>
    <p><strong>Price:</strong> $<%= item.price || '0.00' %></p>
    <p><strong>Quantity:</strong> <%= item.quantity || 0 %></p>

    <div>
      <a href="/items/<%= item.id %>" class="btn">View Details</a>
      <a href="/items/<%= item.id %>/edit" class="btn">Edit</a>
      <form
        action="/items/<%= item.id %>/delete"
        method="POST"
        style="display: inline"
        onsubmit="return confirm('Are you sure you want to delete this item? This action cannot be undone');"
      >
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
  <% }) %> <% } else { %>
  <div class="card">
    <p>No items found in this category.</p>
    <a href="/items/new" class="btn">Add the first item</a>
  </div>
  <% } %>
</div>
