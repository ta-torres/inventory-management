<div class="card">
  <h2><%= item.name %></h2>
  <p><%= item.description || 'No description available' %></p>
  <p><strong>Price:</strong> $<%= item.price || '0.00' %></p>
  <p><strong>Quantity:</strong> <%= item.quantity || 0 %></p>

  <div style="margin: 20px 0">
    <a href="/items" class="btn btn-secondary">‚Üê Back to Items</a>
    <a href="/categories/<%= item.category_id %>" class="btn btn-secondary"
      >View Category</a
    >
    <a href="/items/<%= item.id %>/edit" class="btn">Edit Item</a>
    <form
      action="/items/<%= item.id %>/delete"
      method="POST"
      style="display: inline"
      onsubmit="return confirm('Are you sure you want to delete this item? This action cannot be undone.');"
    >
      <button type="submit" class="btn btn-danger">Delete Item</button>
    </form>
  </div>
</div>
